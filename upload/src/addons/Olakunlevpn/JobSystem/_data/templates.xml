  <template type="public" title="olakunlevpn_job_system_withdrawal_list" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title>Withdrawal request list</xf:title>

<xf:macro template="job_system_sidebar_macros" name="JobSystemNav" arg-current="{{$currentUrl }}" />


<xf:pageaction>
    <xf:button fa="fas fa-wallet" href="{{ link('jobs/withdraw') }}" data-xf-click="overlay">Withdraw</xf:button>
</xf:pageaction>

<div class="block">
    <div class="block-container">
        <div class="block-header">
            Withdrawal history
        </div>

        <xf:datalist data-xf-init="responsive-data-list">
            <xf:datarow rowtype="header">
                <xf:cell class="dataList-cell--min">&nbsp;</xf:cell>
                <xf:cell class="dataList-cell--min">Amount</xf:cell>
                <xf:cell>Payment profile</xf:cell>
                <xf:cell>Payment profile data</xf:cell>
                <xf:cell>Creation date</xf:cell>
                <xf:cell>Change date</xf:cell>
                <xf:cell>Status</xf:cell>
            </xf:datarow>
            <xf:foreach loop="$withdrawRequests" value="$request">
                <xf:macro name="request_item"
                          arg-request="{$request}" />
            </xf:foreach>
        </xf:datalist>
    </div>
</div>

<xf:macro name="request_item" arg-request="!">
    <xf:datarow rowclass="dataList-row--noHover">
        <xf:cell class="dataList-cell--min">#{$request.withdraw_request_id}</xf:cell>
        <xf:cell>
            {$request.Currency.prefix}{{ $request.amount }}{$request.Currency.suffix}
            <span class="dataList-secondRow">{{ $request.Currency.title }}</span>
        </xf:cell>
        <xf:cell>{{ $request.payment_profile }}</xf:cell>
        <xf:cell>{{ $request.payment_profile_data }}</xf:cell>
        <xf:cell>{{ date_time($request.creation_date) }}</xf:cell>
        <xf:cell>{{ $request.change_date ? date_time($request.change_date) : 'None' }}</xf:cell>
        <xf:cell data-xf-init="tooltip" title="{{ $request.change_date ? date_time($request.change_date) : 'None' }}">
            <xf:if is="$request.status == 'created'">
                <xf:fa icon="far fa-clock" />
                <xf:elseif is="$request.status == 'completed'" />
                <xf:fa icon="far fa-check" />
                <xf:else />
                <xf:fa icon="far fa-undo" />
            </xf:if>
            {{ $request.status }}
        </xf:cell>
    </xf:datarow>
</xf:macro>
]]></template>
