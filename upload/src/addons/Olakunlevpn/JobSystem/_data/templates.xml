  <template type="admin" title="olakunlevpn_admin_job_system_add" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title>Create or Edit Job</xf:title>

<xf:form action="{{ link('jobs/save', $job) }}" class="block" ajax="true">
    <div class="block-container">
        <div class="block-body">
            <xf:textboxrow name="title" value="{$job.title}" label="Title" />

            <xf:textarearow name="description" label="Description" value="{{ $job.description }}" />

            <xf:editorrow name="details" label="Details" value="{{ $job.details }}" data-min-height="200" />

            <xf:numberboxrow name="reward_amount" value="{$job.reward_amount}" min="1" step="1" label="Reward Amount" />

            <xf:selectrow name="reward_currency" value="{$job.reward_currency}" label="Reward Currency">
                <xf:foreach loop="$currencies" value="$currency">
                    <xf:option value="{{ $currency.value }}">{{ $currency.label }}</xf:option>
                </xf:foreach>
            </xf:selectrow>

            <xf:radiorow name="type" value="{{ $job.type }}" label="Job submission Type">
                <xf:option value="text">Text</xf:option>
                <xf:option value="url">URL</xf:option>
            </xf:radiorow>


            <xf:checkboxrow>
                <xf:option name="has_attachment" value="1" selected="{{ $job.has_attachment }}">Has Attachment</xf:option>
            </xf:checkboxrow>


            <xf:numberboxrow name="max_completions" value="{$job.max_completions}" min="1" step="1" label="Max Completions" />

            <xf:checkboxrow>
                <xf:option name="active" value="1" selected="$job.active">Is Active</xf:option>
            </xf:checkboxrow>
        </div>

        <xf:submitrow sticky="true" icon="save" />
    </div>
</xf:form>
]]></template>
  <template type="admin" title="olakunlevpn_admin_job_system_list" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title>Manage Jobs</xf:title>


<xf:pageaction>
    <xf:button href="{{ link('jobs/add') }}" icon="add">
        Add New Job
    </xf:button>
</xf:pageaction>

<xf:if is="$jobs is not empty">
    <div class="block">
        <div class="block-container">
            <div class="block-body">
                <xf:datalist>
                    <xf:foreach loop="$jobs" value="$job">
                        <xf:datarow rowclass="{{ $job.active ? '' : 'dataList-row--disabled' }}">
                            <xf:cell>
                                <a href="{{ link('admin:jobs/edit', $job) }}">{{ $job.title }}</a>
                            </xf:cell>
                            <xf:cell>
                                {{ $job.reward_amount }} credits
                            </xf:cell>
                            <xf:cell>
                                <xf:if is="$job.active">
                                    <span class="label label--green">Active</span>
                                    <xf:else />
                                    <span class="label label--error">Inactive</span>
                                </xf:if>
                            </xf:cell>
                            <xf:cell>
                                <xf:button  href="{{ link('admin:jobs/edit', $job) }}" icon="edit" overlay="true">Edit</xf:button>
                                <xf:button class="b" href="{{ link('admin:jobs/delete', $job) }}" icon="delete" overlay="true">Delete</xf:button>
                            </xf:cell>
                        </xf:datarow>
                    </xf:foreach>
                </xf:datalist>
            </div>
            <div class="block-footer">
                <span class="block-footer-counter">{{ display_totals($jobs, $total) }}</span>
            </div>
        </div>
        <xf:pagenav page="{$page}" perpage="{$perPage}" total="{$total}"
                    link="admin:jobs" params="{{ {'criteria': $criteria} }}"
                    wrapperclass="block-outer block-outer--after" />
    </div>
    <xf:else />
    <div class="blockMessage">No jobs have been added yet.</div>
</xf:if>
]]></template>
  <template type="admin" title="olakunlevpn_admin_job_system_submission" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title>Manage Submissions</xf:title>



<xf:if is="$submissions is not empty">
    <div class="block">
        <div class="block-container">
            <h3 class="block-header">Job Submissions</h3>

            <div class="block-body">

                <xf:datalist>
                    <xf:datarow rowtype="header">
                        <xf:cell>User</xf:cell>
                        <xf:cell>Reward</xf:cell>
                        <xf:cell>Status</xf:cell>
                        <xf:cell>Submited At</xf:cell>
                        <xf:cell> </xf:cell>
                    </xf:datarow>

                    <xf:foreach loop="$submissions" value="$submission">
                        <xf:datarow>
                            <xf:cell>
